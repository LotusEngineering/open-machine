            "type": "shell",
            "command": "make all",
            "options": {
                "cwd": "${workspaceFolder}/code/examples/blinky/blinky_h743",
                "env": {
			        "path": "${workspaceFolder}/tools/build_tools_win64/4.2.1-2/bin/;C:/ST/STM32CubeCLT/GNU-tools-for-STM32/bin/"     
                },
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
